<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvFilmAdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Film Adı"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivAfis"
        android:layout_width="wrap_content"
        android:layout_height="128dp"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        app:srcCompat="@drawable/iceage"
        tools:srcCompat="@drawable/iceage" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Oyuncular"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvOyuncu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denis Leary, Goran Visnjic, John Leguizamo, Ray Romano" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Filmin Konusu"
        android:textAlignment="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvKonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20 bin yıl önce, Dünya hiç olmadığı kadar harika ve bir o kadar da tehlikelidir. " />

    <Switch
        android:id="@+id/sİzlendi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="İzlendi" />

    <RatingBar
        android:id="@+id/rbOy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="18dp"
        android:numStars="5"
        android:progressTint="#4CAF50"
        android:rating="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnGeri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:backgroundTint="#F80707"
            android:onClick="geriGelme"
            android:text="Geri" />

        <Button
            android:id="@+id/btnİleri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:backgroundTint="#2542E4"
            android:onClick="ileriGitme"
            android:text="İleri" />
    </LinearLayout>

</LinearLayout>